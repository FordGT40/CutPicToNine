<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/head_title_bar"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <RelativeLayout
                            android:id="@+id/layout_images"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">


                        <ImageView
                                android:id="@+id/iv_image1"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_marginBottom="2.88dp"
                                android:layout_marginRight="2.88dp"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image2"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_marginBottom="2.88dp"
                                android:layout_marginRight="2.88dp"
                                android:layout_toRightOf="@id/iv_image1"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image3"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_marginBottom="2.88dp"
                                android:layout_toRightOf="@id/iv_image2"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image4"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_below="@id/iv_image1"
                                android:layout_marginBottom="2.88dp"
                                android:layout_marginRight="2.88dp"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image5"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_below="@id/iv_image2"
                                android:layout_marginBottom="2.88dp"
                                android:layout_marginRight="2.88dp"
                                android:layout_toRightOf="@id/iv_image4"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image6"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_below="@id/iv_image3"
                                android:layout_marginBottom="2.88dp"
                                android:layout_toRightOf="@id/iv_image5"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image7"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_below="@id/iv_image4"
                                android:layout_marginRight="2.88dp"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image8"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_below="@id/iv_image5"
                                android:layout_marginRight="2.88dp"
                                android:layout_toRightOf="@id/iv_image7"
                                android:background="#D0D0D0"/>

                        <ImageView
                                android:id="@+id/iv_image9"
                                android:layout_width="100.00dp"
                                android:layout_height="100.00dp"
                                android:layout_below="@id/iv_image6"
                                android:layout_toRightOf="@id/iv_image8"
                                android:background="#D0D0D0"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                        android:id="@+id/layout_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#50000000"
                        android:visibility="gone">

                    <com.wisdom.cutpictonine.weight.LiquidCircleView
                            android:layout_width="100.00dp"
                            android:layout_height="100.00dp"
                            android:layout_centerInParent="true"/>

                </RelativeLayout>
            </FrameLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <RadioGroup
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/distance_15dp"
                        android:layout_marginLeft="@dimen/distance_50dp"
                        android:layout_height="wrap_content">

                    <RadioButton
                            android:layout_width="wrap_content"
                            android:button="@drawable/selector_transverse"
                            android:layout_height="wrap_content"/>

                    <RadioButton
                            android:layout_marginLeft="@dimen/distance_15dp"
                            android:layout_width="wrap_content"
                            android:button="@drawable/selector_vertical"
                            android:layout_height="wrap_content"/>


                </RadioGroup>
            </LinearLayout>




        </LinearLayout>
    </ScrollView>
</LinearLayout>